[Unit]
Description= HDFS NameNode Service

[Service]
LimitNOFILE=65535
Environment=LC_ALL=en_US.UTF-8
Environment=LANG=en_US.UTF-8
Type=simple
User={{ hadoop_user }}
Group={{ hadoop_user }}
ExecStart=/etc/hadoop/bin/hdfs namenode
StandardOutput=journal
StandardError=journal
Restart=always

[Install]
WantedBy=multi-user.target
